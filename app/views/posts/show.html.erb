<b>Title:</b> <%=@post.title %><br>
<b>Created:</b> <%=@post.created_at %><br>
<p><%=@post.body %></p>
<hr>
<%=link_to "Edit", edit_post_path %> - <%=link_to "Delete", post_path, method: :delete%> - <%= link_to "Back", "/user_posts"%>
<hr>

<h4>Comment:</h4>
<%=form_for @comment do |f|%>
	<%=f.label :body, "Body:"%><br>
	<%=f.text_area :body, size: "30x5"%><br>
	<%=f.hidden_field :post_id, value: @post.id%>
	<%=f.submit ("Comment")%><br>
<%end%>
<hr>
<h2>Comments:</h2>
<% @comments.reverse.each do |comment| %>
	<p><%= link_to comment.username, user_path(comment.user_id) %>: <%=comment.body%></p>
	<hr>
<%end%>
